# Copy this file to secrets.yml and fill in your actual values
# NEVER commit secrets.yml to version control!

---
# Server Configuration
SERVER_PORT: "8080"

# OpenAI API Configuration
OPENAI_API_KEY: "sk-proj-your-openai-api-key-here"
OPENAI_CHAT_MODEL: "gpt-4-turbo-preview"

# Google Generative AI (Gemini) Configuration
GEMINI_API_KEY: "your-gemini-api-key-here"
GEMINI_CHAT_MODEL: "gemini-2.0-flash-exp"

# Security Configuration (set SECURITY_ENABLED to "false" to disable)
SECURITY_ENABLED: "true"
SECURITY_USERNAME: "admin"
SECURITY_PASSWORD: "your-password-here"
